<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaireddine.mygreenhouse.Inscrit_info_personnel"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/ic_f"
        android:minHeight="100dp"
        android:textAlignment="center"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>
    <TextView
        android:layout_below="@id/toolbar"
        android:id="@+id/nom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/nom"
        android:layout_alignLeft="@id/nom"
        android:visibility="invisible"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/nom"
        android:layout_below="@+id/nom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:ems="15"
        android:drawableLeft="@drawable/ic_person"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />

    <TextView
        android:id="@+id/prenom_label"
        android:layout_below="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prénom"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/prenom"
        android:layout_alignLeft="@id/prenom"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/prenom"
        android:layout_below="@+id/prenom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_person"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />
    <TextView
        android:id="@+id/cin_label"
        android:layout_below="@+id/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro carte d'identité"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/cin"
        android:layout_alignLeft="@id/cin"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/cin"
        android:layout_below="@+id/cin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Numéro carte d'identité"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_cin"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />
    <TextView
        android:id="@+id/numero_label"
        android:layout_below="@+id/cin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro Telephone"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/numero"
        android:layout_alignLeft="@id/numero"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/numero"
        android:layout_below="@+id/numero_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Numéro Telephone"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_call"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />


    <Button
        android:id="@+id/inscrit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numero"
        android:onClick="To_compte_info"
        android:text="Suivant"
        style="@style/ButtonStyle"
        />
</RelativeLayout>


